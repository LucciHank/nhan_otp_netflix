<!-- No layout directive needed as it's set globally in index.js -->
<div class="max-w-md mx-auto">
  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-netflix-light">Đăng Nhập Quản Trị</h1>
    <p class="text-gray-400 mt-2">Đăng nhập để quản lý tài khoản và OTP</p>
  </div>
  
  <form method="post" class="space-y-6">
    <% if (err) { %>
      <div class="bg-red-900/50 text-red-300 p-3 rounded-md text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <%= err %>
      </div>
    <% } %>
    
    <div class="space-y-4">
      <div>
        <label for="user" class="block text-sm font-medium text-gray-300 mb-1">Tên đăng nhập</label>
        <input 
          id="user"
          name="user" 
          placeholder="Nhập tên đăng nhập" 
          class="w-full px-3 py-2 bg-gray-800 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-netflix-red"
          required
        />
      </div>
      
      <div>
        <label for="pass" class="block text-sm font-medium text-gray-300 mb-1">Mật khẩu</label>
        <input 
          id="pass"
          name="pass" 
          type="password" 
          placeholder="Nhập mật khẩu" 
          class="w-full px-3 py-2 bg-gray-800 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-netflix-red"
          required
        />
      </div>
    </div>
    
    <button 
      type="submit" 
      class="w-full bg-netflix-red hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition duration-200"
    >
      Đăng Nhập
    </button>
  </form>
</div>
